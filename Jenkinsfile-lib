pipeline {
    agent any

    environment {
        PYTHON_VERSION = '3.11'
    }
    stages {
        stage('Setup Python Environment') {
            steps {
                script {
                    sh 'pip install --user poetry'
                    sh '''
                        if ! command -v python3.11 &> /dev/null; then
                            echo "Error: Python 3.11 is not installed or not in PATH."
                            exit 1
                        fi
                    '''
                    sh '''
                        PYTHON_PATH=$(command -v python3.11)
                        echo "Using Python at: $PYTHON_PATH"
                        cd dynaface-lib
                        poetry env use "$PYTHON_PATH"
                        poetry run python --version
                    '''
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh '''
                        cd dynaface-lib
                        poetry install
                        poetry run pip install --upgrade setuptools
                    '''
                }
            }
        }

        stage('Run Tests & Generate Coverage') {
            steps {
                script {
                    sh '''
                        cd dynaface-lib
                        export PATH="$HOME/.pyenv/bin:$PATH"
                        eval "$(pyenv init --path)"
                        eval "$(pyenv virtualenv-init -)"
                        poetry run pytest tests --junitxml=unit_test_results.xml --cov=./ --cov-report=xml:coverage.xml --cov-report=html
                    '''
                }
            }
        }

        stage('Build Package') {
            steps {
                script {
                    sh '''
                        cd dynaface-lib
                        poetry build
                        WHEEL_FILE=$(ls dist/*.whl | head -n 1)
                        WHEEL_BASENAME=$(basename "$WHEEL_FILE" .whl)
                        NEW_WHEEL_FILENAME="${WHEEL_BASENAME}-${BUILD_NUMBER}.whl"
                        mv "$WHEEL_FILE" "dist/$NEW_WHEEL_FILENAME"
                        echo "Renamed wheel file to: $NEW_WHEEL_FILENAME"
                    '''
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                script {
                    archiveArtifacts artifacts: 'dynaface-lib/dist/*.whl', fingerprint: true
                    archiveArtifacts artifacts: 'dynaface-lib/coverage.xml', allowEmptyArchive: true
                    archiveArtifacts artifacts: 'dynaface-lib/htmlcov/**', allowEmptyArchive: true
                }
            }
        }
        
        stage('Upload to S3') {
            steps {
                script {
                    sh '''
                        AWS_BUCKET_NAME="data.heatonresearch.com"
                        AWS_BUCKET_PATH="library/"
                        cd dynaface-lib/dist
                        WHEEL_FILE=$(ls *.whl | head -n 1)
                        echo "Uploading $WHEEL_FILE to S3..."
                        aws s3 cp "$WHEEL_FILE" s3://$AWS_BUCKET_NAME/$AWS_BUCKET_PATH --acl public-read
                    '''
                }
            }
        }
    }

    post {
        always {
            script {
                sh '''
                    cd dynaface-lib
                    poetry cache clear pypi --all
                '''
            }
            junit 'dynaface-lib/unit_test_results.xml'
            recordCoverage(
                tools: [[parser: 'COBERTURA', pattern: 'dynaface-lib/coverage.xml']],
                id: 'pytest-coverage',
                name: 'Pytest Coverage',
                sourceCodeRetention: 'EVERY_BUILD',
                qualityGates: [
                    [threshold: 60.0, metric: 'LINE', baseline: 'PROJECT', unstable: true],
                    [threshold: 60.0, metric: 'BRANCH', baseline: 'PROJECT', unstable: true]
                ]
            )
        }
    }
}